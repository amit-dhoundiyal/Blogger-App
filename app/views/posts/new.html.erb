<div class="container p-5">
	<div class="row">
		<div class="col-md-12">
		  <%= form_for @post,url: posts_path, method: :post  do |f| %>
		  	<%= render partial: 'form', locals: { f: f } %>
		  	<div class="d-flex justify-content-center">
			  	<%= f.submit 'Submit', {class: 'btn btn-success', data: { disable_with: "Saving..." }} %>
					<span class="p-2">OR</span>	
					<%= link_to 'Cancel', posts_path, class: 'btn btn-danger' %>
				</div>
		  <% end%>
		</div>
	</div>
</div> 