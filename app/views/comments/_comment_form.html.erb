<div class="row mt-3">
	<div class="col-md-12">
		<%= form_for @comment,url: post_comments_path(@post) do |f|%>
			<div class="form-group">
				<%= f.text_field :body,class: "form-control",required: true%>
				<%= f.submit "Comment",class: 'btn btn-success mt-1'%>
			</div>
		<% end %>
	</div>
</div>